---
import { Image } from 'astro:assets';
import logo from '../../assets/logo.svg';
import Navigation from './navigation/navigation.astro';
import NavigationCta from './navigation/navigation-cta.astro';
---

<header class="bg-background/90 sticky inset-0 isolate z-50 backdrop-blur-sm">
  <div class="relative mx-auto flex w-full max-w-screen-2xl items-center gap-6 px-4 py-4 sm:px-8">
    <a href="/" data-nav-link>
      <Image src={logo} alt="Uplevl Logo" width={102} height={32} />
    </a>
    <!-- <NavigationToggleButton /> -->
    <Navigation />
    <NavigationCta />
  </div>
</header>