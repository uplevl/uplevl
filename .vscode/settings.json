{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[astro]": {
    "editor.defaultFormatter": "astro-vscode.astro-vscode"
  },
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always"
  },
  "typescript.tsdk": "./node_modules/typescript/lib",
  "cSpell.words": [
    "autoincrement",
    "dbgenerated",
    "JPCM",
    "nextjs",
    "NGROK",
    "posthog",
    "reposted",
    "sonner",
    "superadmin",
    "svix",
    "tiktok",
    "treeify",
    "waitlist"
  ]
}
